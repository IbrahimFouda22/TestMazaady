<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:src="@drawable/img_course" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtHead2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/shape_text_orange"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="15dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Free e-book"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImgAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_avatar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="24sp"
                android:text="Laurel Seilha"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/cardImgAvatar"
                app:layout_constraintTop_toTopOf="@id/cardImgAvatar" />

            <TextView
                android:id="@+id/txtUnderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="15sp"
                android:text="+1600 Points"
                android:textColor="@color/grey2"
                android:textFontWeight="500"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/cardImgAvatar"
                app:layout_constraintStart_toStartOf="@id/txtTitle"
                app:layout_constraintTop_toBottomOf="@id/txtTitle" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="7dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toTopOf="@id/cardImgAvatar"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightBlue"
                    android:fontFamily="@font/poppins_regular"
                    android:lineHeight="15sp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="6 lessons"
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardText1"
                app:layout_constraintStart_toEndOf="@id/cardText1"
                app:layout_constraintTop_toTopOf="@+id/cardText1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:fontFamily="@font/poppins_regular"
                    android:lineHeight="15sp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="UI/UX"
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardText2"
                app:layout_constraintStart_toEndOf="@id/cardText2"
                app:layout_constraintTop_toTopOf="@+id/cardText2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/purple"
                    android:fontFamily="@font/poppins_regular"
                    android:lineHeight="15sp"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="2dp"
                    android:text="Free"
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtStopWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="15sp"
                android:text="5h 21m"
                android:textColor="@color/grey3"
                android:textFontWeight="500"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/ic_stop_watch"
                app:layout_constraintBottom_toTopOf="@id/cardText1"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_regular"
                android:lineHeight="25sp"
                android:text="Step design sprint for beginner"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/txtStopWatch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/txtStopWatch" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>